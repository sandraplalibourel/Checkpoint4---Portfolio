{% extends 'base.html.twig' %}

{% block title %}Contacte-moi{% endblock %}

{% block body %}
    <div class="contact-page">
        <h1 class="contact-title">Contacte-moi</h1>
        <div class="flash-message">
            {% for messages in app.flashes(['success']) %}
                {% for message in messages %}
                   <p class="message-success"> {{ message }}</p>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="contact-section">
            <h2 class="contact-section-title"># Mes coordonnées</h2>
            <ul>
                <li>sandraplalibourel@gmail.com</li>
                <li>06 59 61 85 88</li>
                <li>Bordeaux</li>
                <a class="github-link" target="_blank" href="https://github.com/sandraplalibourel"><i class="fab fa-github"></i></a>
                <a class="linkedin-link" target="_blank" href="https://www.linkedin.com/in/sandra-plalibourel/"><i class="fab fa-linkedin-in"></i></a>
            </ul>
        </div>
            <div class="contact-section2">
                <h2 class="contact-section-title"># Ou si tu le préfères ... </h2>
                <div class="contact-form">
                    {{ form_start(contact_form) }}
                    {{ form_widget(contact_form) }}
                    <input class="btn-form" type='submit' value='Envoyer le message'>
                    {{ form_end(contact_form) }}
                </div>
            </div>
        </div>
{% endblock %}
